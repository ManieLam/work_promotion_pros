/*template.wxss
* 主要存放所有公用template样式
*/


/*-----Tpl_header start----------*/

.tplHeader_box {
    display: flex;
    width: 100%;
}


/* Tpl_noMore*/

.newCells_ft {
    background-color: #fff;
    text-align: center;
    display: flex;
    padding: 0 10px;
}

.newCells_ft .newText {
    color: #6a7fa5;
    width: 100%;
    line-height: 80rpx;
    font-size: 17px;
    /*border-top:1rpx solid #D9D9D9;*/
}


/*列表*/

.weui-cell__ft_in-access {
    padding-right: 0;
}


/*图标*/

.icons {
    width: 35rpx;
    height: 35rpx;
    min-width: 35rpx;
    vertical-align: middle;
    margin: 0 5px;
}

.icons_mini {
    width: 25rpx;
    height: 25rpx;
    min-width: 25rpx;
    vertical-align: middle;
    margin: 0 5px;
}


/*评论区*/

.discussion_body {
    padding: 0 15px 10px;
}

.discussion_footer {
    padding: 10px 15px;
    font-size: 14px;
    line-height: 2em;
    justify-content: flex-end;
}


/*flexImgs*/

.list-box {
    display: block;
    list-style-type: disc;
    /*-webkit-margin-before: 1em;
    -webkit-margin-after: 1em;*/
    -webkit-margin-start: 0px;
    -webkit-margin-end: 0px;
    -webkit-padding-start: 15px;
    -webkit-padding-end: 15px;
}

.rel {
    position: relative;
}

.flex-wrp {
    display: flex;
    flex-wrap: wrap;
}

.flex-image,
.flex-image-nomar {
    margin-right: 5px;
    margin-bottom: 5px;
}

.flex-image-nomar:nth-child(3n) {
    margin-right: 0px;
}


/*.flex-image:nth-child(3n) {
    margin-right: 0px;
}*/

.artical_like {
    width: 20px;
    height: 20px;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -10px;
    margin-left: -10px;
}

.artical_like_btn {
    width: 80rpx;
    height: 80rpx;
    border: 3rpx solid #b2b2b2;
    border-radius: 50%;
    /*padding: 10px;*/
    /*margin: 0 auto;*/
    text-align: center;
    color: #b2b2b2;
    overflow: hidden;
    font-size: 14px;
    position: relative;
}

.artical_like_btn-active {
    border-color: #09bb07;
    color: #09bb07;
}

.col_466 {
    color: #466492
}

.discItem {
    padding: 20px 0;
}

.bor_e5 {
    border-bottom: 1rpx solid #e5e5e5;
}

.discItem:first-child {
    padding-top: 0;
}


/*授权页样式*/

.sectionBox {
    padding: 10px;
    height: 100%;
}

.boxBody {
    padding: 15px 10px;
    box-shadow: 0px 1px 1px #b2b2b2;
    margin-bottom: 20px;
}

.boxInfo {
    color: #ec633b;
    line-height: 2;
    border-bottom: 1rpx solid #f4f4f4;
    text-align: center;
    padding: 0 15px;
    width: 50%;
    margin: 0 auto;
    font-weight: 600;
    font-size: 20px;
}

.boxContent view {
    /*font-size: 14px;*/
    padding-top: 20px;
}


/*授权页样式end*/


/*首页列表*/

.con_right {
    font-size: 75%;
    margin: 20px 20px 10px 10px;
}

.con_right_up {
    display: flex;
    flex-wrap: wrap;
}

.con_right_up>view {
    width: 76px;
}

.con_right_down>view {
    width: 76px;
}

.con_right_down {
    display: flex;
    flex-wrap: wrap;
}

.newModal {
    position: fixed;
    margin: 0 auto;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    /*overflow: hidden;*/
}

.newModal .newModal_body {
    position: absolute;
    margin: 0 auto;
    border-radius: 5px;
    -webkit-border-radius: 5px;
    z-index: 2;
    width: 93%;
    height: 280px;
}

.newModal .overTag {
    z-index: 1;
    position: fixed;
    background: rgba(0, 0, 0, .3);
    height: 100%;
    width: 100%;
}