 /*pages/articalDetail/articalDetail.wxss */
 
 page {
     background: #fff;
 }
 /*回到首页*/
 
 .headerLink_box {
     background-color: #eee;
     position: fixed;
     top: 0;
     right: 0;
     margin: auto;
     width: 100%;
     line-height: 80rpx;
     display: -webkit-box;
     display: -webkit-flex;
     display: flex;
     -webkit-box-align: center;
     -webkit-align-items: center;
     align-items: center;
     justify-content: center;
     /*height:100%;*/
 }
 
 .headerLink_box image {
     width: 24px;
     height: 24px;
 }
 
 .headerLink_box .text {
     font-size: 30rpx;
     padding-left: 10px;
 }
 
 .header_title {
     position: absolute;
     top: 0;
     left: 0;
     right: 0;
     bottom: 0;
     margin: auto;
     text-align: center;
     height: 20%;
     width: 95%;
     color: #fff;
     font-size: 20px;
 }
 
 .header_time {
     position: absolute;
     bottom: 0;
     right: 5px;
     line-height: 2;
     font-size: 14px;
 }
 
 .artical_item {
     flex-direction: column;
     font-size: 17px;
     font-weight: 500;
     padding: 20rpx 10rpx;
     background-color: #fff;
 }
 
 .artical_item_detail {
     font-weight: 300;
 }
 /*.wxParse-strong{ font-weight:600 }*/
 
 .wxParse-p {
     margin: 10rpx 20rpx;
     overflow: hidden;
     line-height: 2.2;
 }
 
 .wxParse-p:not(:first-child) {
     margin: 20rpx;
 }
 
 .wxParse-li-text {
     padding-left: 10rpx;
 }
 
 .margin-top {
     margin-top: 38px;
 }
 
 .txt-right {
     text-align: right;
     padding-right: 20rpx;
 }
 
 .placeClass {
     font-size: 14px;
     color: #b2b2b2;
     line-height: 2em;
 }
 
 .textareaBox {
     padding: 10px 15px;
 }
 
 .textareaStyle {
     background: #fff;
     margin-bottom: 20px;
     width: 100%;
 }
 
 .userUrl {
     min-width: 45px;
     height: 45px;
     max-width: 20%;
     border: 1rpx solid #b2b2b2;
 }
 
 .newCells_img {
     margin: 0 auto;
     text-align: center;
 }
 
 .newCells_img image {
     width: 36px;
     height: 36px;
     margin-right: 4px;
     margin-bottom: 4px;
     border-radius: 50%;
     -webkit-border-radius: 50%;
     border: 1rpx solid #f4f4f4;
 }
 
 .share_btn {
     background-image: url('data:image/png;base64,');
     background-size: 100% 100%;
     background-repeat: no-repeat;
     background-color: transparent !important;
     /*padding: 10px;*/
     width: auto;
     /*max-width: 20px;*/
     height: 22px;
     position: absolute;
     top: 50%;
     left: 50%;
     margin-top: -10px;
     margin-left: -13px;
 }
 
 .share_btn::after {
     border: 0!important;
 }
