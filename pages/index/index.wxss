/**index.wxss**/

.con_left {
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
    flex-direction: column;
    width: 225px;
}

.newCells {
    background-color: #FFFFFF;
    line-height: 2;
    font-size: 17px;
    /*padding:20px 0;*/
}

.newCells .weui-cell {
    padding: 10px;
    /*height:118px;*/
}

.newCells .weui-cell::after {
    content: " ";
    position: absolute;
    /*left: 3%;right: 3%;border: 0; border-bottom: 1rpx solid #d9d9d9;*/
    bottom: 0;
    height: 5px;
    border: 0;
}

.newCells_img image {
    width: 60px;
    height: 60px;
    display: block;
    /*margin-right: 10px;*/
    border-radius: 50%;
    -webkit-border-radius: 50%;
    border: 1rpx solid #f0f0f0;
}

.title {
    font-size: 30rpx;
    text-align: left;
    font-weight: 500;
    text-align: center;
}

button::after {
    border: 0!important;
}

.tags {
    display: flex;
    flex-wrap: wrap;
    margin: 13px 10px 13px 10px;
}

.tags_cel {
    text-align: center;
    line-height: 30px;
    width: 24%;
    height: 33px;
    background: #e5e5e5;
    margin-top: 4px;
    margin-right: 4px;
    border-radius: 5px;
    overflow: hidden;
}

.tags_cel:nth-child(4n) {
    margin-right: 0;
}

.slider {
    background: #e5e5e5;
    height: 7px;
}

.con_right {
    display: flex;
    flex-wrap: wrap;
    font-size: 30rpx;
    margin: 10px 0 0 10px;
}

.con_right_up {
    display: flex;
    display: -webkit-box;
    width: 100%;
    text-align: center;
}

.con_right_up>view {
    flex: 1;
    box-flex: 1;
    -webkit-box-flex: 1;
}


/*.con_right_down>view {
    width: 55px;
}

.con_right_down {
    display: flex;
    flex-wrap: wrap;
}*/

.fans {
    border-right: 1px solid #d9d9d9;
}

.read {
    padding: 0 5px 0 5px;
    border-right: 1px solid #d9d9d9;
    width: 80px;
    text-align: center;
}

.sex {
    padding-left: 5px;
    text-align: center;
}

.con_right_tags {
    padding-top: 30rpx;
}

.con_right_tags .tags-cell {
    font-size: 25rpx;
    border-radius: 3px;
    color: #fff;
    background: #bfbfbf;
    margin-right: 10px;
    padding: 0 10rpx;
    line-height: 1.8;
    /*border-right: 5px solid #bfbfbf;
    border-left: 5px solid #bfbfbf;*/
}

.con_right_tags .tags-cell_act {
    background: #e94c32;
}

.triangle {
    display: inline-block;
    width: 0;
    height: 0;
    margin-left: 5px;
    vertical-align: middle;
}

.triangle-up {
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-bottom: 10px solid #707070;
}

.triangle-down {
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 10px solid #707070;
}

.act_cat {
    background: #e54933;
    color: #fff;
}

.con_cell {
    padding: 0 10px;
    font-size: 14px;
}

.con_bottom {
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
    padding-bottom: 10px;
    margin: 0 10px;
    border-bottom: 1rpx solid #aaa;
    overflow: hidden;
}

.con_bottom .tags_self {
    border: 1rpx solid #e54933;
    border-radius: 5px;
    -webkit-border-radius: 5px;
    color: #e54933;
    font-size: .6em;
    font-weight: 600;
    padding: 0 15rpx;
}

.con_bottom .tags_self:not(:last-child) {
    margin-right: 5px;
}